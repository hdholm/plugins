<model>
    <mount>//OPNsense/tang</mount>
    <description>
        Tang is a small daemon for binding data to the presence of a network
    </description>
    <items>
        <!-- container -->
        <general>
	    <!-- fields -->
            <Enabled type="BooleanField">
                <default>0</default>
            </Enabled>
	    <ListenPort type="PortField">
		 <Default>8888</Default>
            </ListenPort>
            <Interfaces type="InterfaceField">
                <multiple>Y</multiple>
                <default>LAN</default>
            </Interfaces>
	    <jwkdir type="TextField">
                <default>"/var/db/tang"</default>
            </jwkdir>
	    <LogFile type="TextField">
                <default>"/var/log/tang"</default>
            </LogFile>
            <Executable type="TextField">
                <default>"/usr/local/libexec/tangd"</default>
            </Executable>
        </general>
    </items>
</model>
