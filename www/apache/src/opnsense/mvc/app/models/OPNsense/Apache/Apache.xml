<model>
    <mount>//OPNsense/Apache</mount>
    <version>1.0.0</version>
    <description>
        Apache gateway server
    </description>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </enabled>
        </general>
        <virtualservers>
            <virtualserver type="ArrayField">
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <description type="TextField">
                    <Required>Y</Required>
                    <mask>/^([\t\n\v\f\r 0-9a-zA-Z.,_\x{00A0}-\x{FFFF}]){1,255}$/u</mask>
                    <ValidationMessage>Description should be a string between 1 and 255 characters</ValidationMessage>
                </description>
            </virtualserver>
        </virtualservers>
    </items>
</model>
